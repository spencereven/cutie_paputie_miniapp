/* 首页样式 */

/* 页面容器 */
.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #ffffff;
  position: relative;
}

/* 主容器 */
.main-container {
  flex: 1;
  overflow-y: auto;
  padding-bottom: 80px;
}

/* 用户欢迎信息 */
.welcome-row {
  padding: 12px 16px 0;
}

.welcome-text {
  font-size: 16px;
  font-weight: 700;
  color: #1F1F1F;
}

/* 课程列表容器 */
.levels-container {
  display: flex;
  flex-direction: column;
  gap: 8px;
  padding: 16px;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .main-container {
    padding-bottom: 70px;
  }

  .levels-container {
    gap: 6px;
    padding: 12px;
  }
}
