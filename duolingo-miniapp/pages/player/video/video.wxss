.page {
  min-height: 100vh;
  background: #ffffff;
  display: flex;
  flex-direction: column;
}

.top-bar {
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 16px;
  border-bottom: 1px solid #e5e7eb;
}

.back-btn {
  width: 24px;
  font-size: 22px;
  color: #374151;
}

.video-title {
  flex: 1;
  text-align: center;
  padding: 0 8px;
  font-size: 14px;
  font-weight: 700;
  color: #111827;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.spacer {
  width: 24px;
}

.video-container {
  position: relative;
  width: 100%;
  height: 56.25vw;
  min-height: 220px;
  max-height: 420px;
  background: #000000;
}

.video-player {
  width: 100%;
  height: 100%;
}

.state-overlay {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  padding: 6px 12px;
  border-radius: 14px;
  color: #ffffff;
  font-size: 12px;
  background: rgba(0, 0, 0, 0.45);
  pointer-events: none;
}

.error-box {
  margin: 12px 16px 0;
  border-radius: 10px;
  padding: 10px 12px;
  color: #b91c1c;
  background: #fef2f2;
  border: 1px solid #fecaca;
  font-size: 12px;
}

.info-section {
  margin: 14px 16px 0;
  border: 1px solid #e5e7eb;
  border-radius: 12px;
  overflow: hidden;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 12px;
  border-bottom: 1px solid #f3f4f6;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 12px;
  color: #6b7280;
}

.info-value {
  font-size: 12px;
  color: #111827;
  font-weight: 600;
}

.actions {
  margin: 14px 16px 24px;
  display: flex;
  gap: 10px;
}

.action-btn {
  flex: 1;
  height: 40px;
  border-radius: 10px;
  border: 1px solid #d1d5db;
  background: #f8fafc;
  color: #111827;
  font-size: 12px;
  line-height: 40px;
}
