/* Level Detail - 优化后的布局 */

.page {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #ffffff;
}

/* ============ 顶部导航栏 ============ */
.top-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 50px;
  padding: 0 16px;
  border-bottom: 1px solid #E6E6E6;
}

.back-btn {
  font-size: 24px;
  color: #A0A0A0;
  cursor: pointer;
  line-height: 1;
  font-weight: 300;
}

.progress-text {
  font-size: 14px;
  color: #5A5A5A;
  font-weight: 600;
}

.spacer {
  width: 24px;
}

/* ============ 主容器 ============ */
.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  padding-bottom: 80px;
}

/* ============ LEVEL 1 - 新流程 ============ */
.l1-wrap {
  display: flex;
  flex-direction: column;
  gap: 12px;
  padding: 16px;
}

.l1-title {
  font-size: 16px;
  font-weight: 800;
  color: #374151;
}

.l1-subtitle {
  font-size: 12px;
  color: #6b7280;
}

.l1-image-wrap {
  width: 100%;
}

.l1-image {
  width: 100%;
  height: 188px;
  border-radius: 12px;
  background-color: #e5e7eb;
}

.l1-card {
  border: 1px solid #e5e7eb;
  border-radius: 12px;
  background: #ffffff;
  padding: 12px;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.l1-question-title {
  font-size: 14px;
  font-weight: 700;
  color: #1f2937;
}

.l1-audio-row {
  display: flex;
  align-items: center;
  gap: 10px;
}

.l1-progress-track {
  flex: 1;
  height: 6px;
  border-radius: 999px;
  background: #e5e7eb;
  overflow: hidden;
}

.l1-progress-fill {
  height: 100%;
  background: #2cb7ff;
}

.l1-time {
  font-size: 12px;
  color: #6b7280;
}

.l1-attempt,
.l1-pass {
  font-size: 12px;
  color: #4b5563;
}

.l1-record-status {
  font-size: 13px;
  color: #111827;
}

.l1-record-time {
  font-size: 12px;
  color: #6b7280;
}

.l1-action-row {
  display: flex;
  gap: 8px;
}

.l1-btn {
  flex: 1;
  border: 1px solid #d1d5db;
  border-radius: 10px;
  background: #f8fafc;
  color: #111827;
  font-size: 13px;
  line-height: 40px;
  height: 40px;
  padding: 0;
}

.l1-btn::after {
  border: none;
}

.l1-btn.small {
  flex: 0 0 auto;
  min-width: 90px;
  padding: 0 10px;
}

.l1-btn.l1-btn-primary {
  background: #2cb7ff;
  color: #ffffff;
  border-color: #2cb7ff;
}

.l1-btn[disabled] {
  opacity: 0.55;
}

.l1-result-card {
  border: 1px solid #dbeafe;
  border-radius: 12px;
  background: #eff6ff;
  padding: 12px;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.l1-grade {
  font-size: 13px;
  font-weight: 700;
}

.l1-grade.grade-a {
  color: #166534;
}

.l1-grade.grade-b {
  color: #1d4ed8;
}

.l1-grade.grade-c {
  color: #b91c1c;
}

.l1-score {
  font-size: 16px;
  font-weight: 800;
  color: #111827;
}

.l1-result-msg {
  font-size: 12px;
  color: #374151;
}

.l1-answer-card {
  border: 1px solid #fed7aa;
  border-radius: 12px;
  background: #fff7ed;
  padding: 12px;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.l1-answer-title {
  font-size: 13px;
  font-weight: 700;
  color: #9a3412;
}

.l1-answer-desc {
  font-size: 12px;
  color: #9a3412;
}

.l1-next-wrap {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.l1-next-tip {
  font-size: 12px;
  color: #b45309;
}

/* ============ LEVEL 1 - 音频答题模式 ============ */
.level1-title {
  font-size: 16px;
  font-weight: 800;
  color: #4A4A4A;
  padding: 24px 20px 12px;
  line-height: 1.4;
}

.level1-image-wrapper {
  width: 100%;
  padding: 16px 20px;
  box-sizing: border-box;
}

.level1-image {
  width: 100%;
  height: 180px;
  border-radius: 12px;
  object-fit: cover;
  background-color: #F0F0F0;
}

.level1-audio-section {
  padding: 20px 20px 24px;
  background-color: #FAFAFA;
}

.level1-audio-label {
  font-size: 14px;
  font-weight: 700;
  color: #4A4A4A;
  margin-bottom: 12px;
  display: block;
}

.level1-audio-player {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px 16px;
  background-color: #ffffff;
  border-radius: 10px;
  border: 1px solid #E6E6E6;
  margin-bottom: 0;
}

.level1-play-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  background-color: #2CB7FF;
  border-radius: 50%;
  flex-shrink: 0;
  cursor: pointer;
  transition: all 0.2s ease;
}

.level1-play-button:active {
  transform: scale(0.95);
}

.level1-play-icon {
  font-size: 14px;
  color: #ffffff;
  line-height: 1;
  font-weight: 600;
}

.level1-progress-container {
  flex: 1;
  display: flex;
  align-items: center;
  min-width: 0;
}

.level1-progress-bar {
  flex: 1;
  height: 4px;
  position: relative;
  background-color: #E6E6E6;
  border-radius: 2px;
  overflow: hidden;
}

.level1-progress-track {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #E6E6E6;
}

.level1-progress-fill {
  position: absolute;
  height: 100%;
  background-color: #2CB7FF;
  border-radius: 2px;
  transition: width 0.1s linear;
}

.level1-time-text {
  font-size: 12px;
  color: #8A8A8A;
  font-weight: 600;
  margin-left: 12px;
  min-width: 40px;
  flex-shrink: 0;
}

.level1-recording-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20px;
  padding: 32px 20px 40px;
  flex: 1;
  justify-content: center;
}

.level1-recording-hint {
  font-size: 14px;
  color: #8A8A8A;
  font-weight: 600;
  text-align: center;
}

.level1-recording-button {
  display: flex;
  justify-content: center;
}

.level1-record-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80px;
  height: 80px;
  background-color: #2CB7FF;
  border-radius: 50%;
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow: 0 4px 12px rgba(44, 183, 255, 0.25);
}

.level1-record-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2px 6px rgba(44, 183, 255, 0.2);
}

.level1-record-btn.recording {
  background-color: #FF6B6B;
  animation: pulse 1s infinite;
}

.level1-record-icon {
  font-size: 32px;
  line-height: 1;
}

.level1-record-text {
  font-size: 14px;
  font-weight: 700;
  color: #5A5A5A;
}

/* ============ LEVEL 3 - 学生复述模式 ============ */
.level3-instruction-card {
  padding: 24px 20px;
  margin: 16px 20px 0;
  background-color: #ffffff;
  border: 1px solid #E6E6E6;
  border-radius: 12px;
  min-height: 140px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.level3-instruction-text {
  font-size: 14px;
  font-weight: 700;
  color: #4A4A4A;
  line-height: 1.5;
  text-align: center;
  word-wrap: break-word;
  white-space: normal;
}

.level3-recording-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24px;
  padding: 40px 20px;
  flex: 1;
  justify-content: center;
}

.level3-recording-hint {
  font-size: 12px;
  font-weight: 600;
  color: #8A8A8A;
  text-align: center;
}

.level3-button-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16px;
}

.level3-record-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80px;
  height: 80px;
  background-color: #2CB7FF;
  border-radius: 50%;
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow: 0 4px 12px rgba(44, 183, 255, 0.25);
}

.level3-record-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2px 6px rgba(44, 183, 255, 0.2);
}

.level3-record-btn.recording {
  background-color: #FF6B6B;
  animation: pulse 1s infinite;
}

.level3-record-icon {
  font-size: 32px;
  line-height: 1;
}

.level3-button-label {
  font-size: 14px;
  font-weight: 700;
  color: #5A5A5A;
}

.level3-note-card {
  display: flex;
  flex-direction: column;
  gap: 12px;
  padding: 16px;
  margin: 0 20px 40px;
  background-color: #F7F7F7;
  border: 1px solid #E6E6E6;
  border-radius: 12px;
  min-height: 90px;
}

.level3-note-title {
  font-size: 14px;
  font-weight: 800;
  color: #4A4A4A;
}

.level3-note-text {
  font-size: 12px;
  font-weight: 600;
  color: #8A8A8A;
  line-height: 1.3;
  word-wrap: break-word;
  white-space: normal;
}

/* ============ 视频容器 (Level 2) ============ */
.video-container {
  width: 100%;
  height: 220px;
  position: relative;
  background-color: #000000;
}

.video-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.video-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.4);
}

.play-icon-large {
  font-size: 32px;
  color: #ffffff;
  margin-bottom: 12px;
}

.video-controls {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 12px 16px;
  background-color: rgba(0, 0, 0, 0.6);
}

.video-time {
  font-size: 12px;
  color: #ffffff;
  font-weight: 600;
  min-width: 40px;
}

.video-progress {
  flex: 1;
  height: 4px;
  position: relative;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 2px;
}

.video-progress .progress-bg {
  display: none;
}

.video-progress .progress-fill {
  position: absolute;
  height: 100%;
  background-color: #ffffff;
  border-radius: 2px;
}

.progress-dot {
  position: absolute;
  width: 8px;
  height: 8px;
  background-color: #ffffff;
  border-radius: 50%;
  top: -2px;
  transform: translateX(-50%);
}

.video-duration {
  font-size: 12px;
  color: #ffffff;
  font-weight: 600;
  min-width: 40px;
}

/* ============ 分句卡片列表 (Level 2) ============ */
.sentence-pills {
  padding: 20px;
}

.pill {
  display: inline-block;
  padding: 8px 10px;
  background-color: #ffffff;
  border: 1px solid #E6E6E6;
  border-radius: 10px;
  height: 22px;
}

.pill-text {
  font-size: 11px;
  color: #8A8A8A;
  font-weight: 600;
  line-height: 1;
}

/* ============ 分句卡片容器 (Level 2) ============ */
.sentence-cards {
  display: flex;
  flex-direction: column;
  gap: 12px;
  padding: 0 20px 40px;
}

.sentence-card {
  display: flex;
  flex-direction: column;
  gap: 12px;
  padding: 16px;
  background-color: #ffffff;
  border: 1px solid #E6E6E6;
  border-radius: 12px;
  transition: all 0.2s ease;
  cursor: pointer;
}

.sentence-card.active {
  background-color: #ffffff;
  border-color: #2CB7FF;
  box-shadow: 0 2px 8px rgba(44, 183, 255, 0.1);
}

.sentence-card.active:active {
  transform: scale(0.98);
}

.card-title {
  font-size: 14px;
  font-weight: 700;
  color: #4A4A4A;
  line-height: 1.4;
  word-wrap: break-word;
  white-space: normal;
}

.sentence-card.active .card-title {
  color: #4A4A4A;
  font-weight: 700;
}

.sentence-card:not(.active) .card-title {
  color: #B0B0B0;
  opacity: 0.7;
}

.card-subtitle {
  font-size: 12px;
  font-weight: 600;
  color: #8A8A8A;
  line-height: 1.4;
  word-wrap: break-word;
  white-space: normal;
}

.sentence-card.active .card-subtitle {
  color: #8A8A8A;
}

.sentence-card:not(.active) .card-subtitle {
  color: #C0C0C0;
  opacity: 0.7;
}

.card-bottom {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-top: 8px;
}

.speed-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 28px;
  height: 28px;
  background-color: #ffffff;
  border: 1px solid #E6E6E6;
  border-radius: 50%;
  flex-shrink: 0;
  cursor: pointer;
  transition: all 0.2s ease;
}

.speed-button:active {
  transform: scale(0.95);
}

.sentence-card.active .speed-button {
  background-color: #ffffff;
  border-color: #E6E6E6;
}

.sentence-card:not(.active) .speed-button {
  background-color: #ffffff;
  border-color: #E6E6E6;
  opacity: 0.7;
}

.speed-icon {
  font-size: 14px;
  line-height: 1;
}

.speed-text {
  font-size: 12px;
  font-weight: 700;
  color: #8A8A8A;
}

.sentence-card.active .speed-text {
  color: #8A8A8A;
}

.sentence-card:not(.active) .speed-text {
  color: #C0C0C0;
  opacity: 0.7;
}

.progress-bar-small {
  flex: 1;
  height: 4px;
  position: relative;
  background-color: #E6E6E6;
  border-radius: 2px;
  overflow: hidden;
  min-width: 50px;
}

.progress-fill-small {
  height: 100%;
  background-color: #2CB7FF;
  border-radius: 2px;
  transition: width 0.3s ease;
}

.sentence-card.active .progress-bar-small {
  background-color: #E6E6E6;
}

.sentence-card.active .progress-fill-small {
  background-color: #2CB7FF;
}

.sentence-card:not(.active) .progress-bar-small {
  background-color: #E6E6E6;
}

.sentence-card:not(.active) .progress-fill-small {
  background-color: #E6E6E6;
  opacity: 0.7;
}

.duration-text {
  font-size: 11px;
  color: #8A8A8A;
  font-weight: 600;
  min-width: 40px;
  text-align: right;
}

.sentence-card.active .duration-text {
  color: #8A8A8A;
}

.sentence-card:not(.active) .duration-text {
  color: #C0C0C0;
  opacity: 0.7;
}

.mic-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 34px;
  height: 34px;
  background-color: #2ECC71;
  border-radius: 50%;
  flex-shrink: 0;
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow: 0 2px 4px rgba(46, 204, 113, 0.2);
}

.mic-btn:active {
  transform: scale(0.95);
  box-shadow: 0 1px 2px rgba(46, 204, 113, 0.3);
}

.sentence-card.active .mic-btn {
  background-color: #2ECC71;
}

.sentence-card:not(.active) .mic-btn {
  background-color: #E6E6E6;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
}

.mic-btn.answered {
  background-color: #2ECC71;
  box-shadow: 0 2px 6px rgba(46, 204, 113, 0.3);
}

.mic-icon {
  font-size: 16px;
  line-height: 1;
  color: #ffffff;
}

.sentence-card:not(.active) .mic-icon {
  color: #B0B0B0;
}

/* ============ 脉冲动画 ============ */
@keyframes pulse {
  0%, 100% {
    box-shadow: 0 4px 12px rgba(255, 107, 107, 0.25);
  }
  50% {
    box-shadow: 0 4px 16px rgba(255, 107, 107, 0.4);
  }
}

