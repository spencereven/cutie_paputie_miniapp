.page {
  min-height: 100vh;
  background: #ffffff;
}

.top-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 48px;
  padding: 0 16px;
  border-bottom: 1px solid #e6e6e6;
}

.back-btn {
  font-size: 24px;
  color: #4a4a4a;
}

.page-title {
  font-size: 16px;
  font-weight: 600;
  color: #4a4a4a;
}

.spacer {
  width: 24px;
}

.content {
  height: calc(100vh - 48px);
}

.header {
  padding: 20px;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.main-title {
  font-size: 22px;
  font-weight: 800;
  color: #334155;
}

.main-subtitle {
  font-size: 12px;
  color: #64748b;
}

.state-text {
  padding: 0 20px 14px;
  color: #64748b;
  font-size: 13px;
}

.state-text.error {
  color: #b91c1c;
}

.section {
  padding: 0 20px 18px;
}

.section-title {
  font-size: 15px;
  font-weight: 700;
  color: #334155;
  margin-bottom: 8px;
}

.empty-text {
  color: #94a3b8;
  font-size: 12px;
  padding: 6px 0;
}

.asset-row {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px;
  border: 1px solid #e2e8f0;
  border-radius: 12px;
  margin-bottom: 10px;
}

.asset-icon {
  font-size: 20px;
}

.asset-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
  min-width: 0;
}

.asset-name {
  font-size: 14px;
  font-weight: 600;
  color: #1f2937;
}

.asset-meta {
  font-size: 12px;
  color: #6b7280;
}

.asset-action {
  color: #2563eb;
  font-size: 12px;
  font-weight: 700;
}

.bottom-spacing {
  height: 20px;
}
