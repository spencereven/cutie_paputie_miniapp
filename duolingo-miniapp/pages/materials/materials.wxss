/* Materials 样式 */

.page {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #ffffff;
}

/* ============ 顶部标题栏 ============ */
.top-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 50px;
  padding: 0 24px;
  border-bottom: 1px solid #E6E6E6;
}

.page-title {
  font-size: 20px;
  font-weight: 700;
  color: #1F1F1F;
}

.close-btn {
  font-size: 32px;
  color: #A0A0A0;
  cursor: pointer;
  line-height: 1;
  font-weight: 300;
}

.close-btn:active {
  opacity: 0.6;
}

/* ============ 选项卡 ============ */
.tabs {
  display: flex;
  gap: 0;
  padding: 0;
  border-bottom: 1px solid #E6E6E6;
  background-color: #FAFAFA;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
}

.tab {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 48px;
  padding: 0 16px;
  border-bottom: 3px solid transparent;
  font-size: 14px;
  font-weight: 600;
  color: #A0A0A0;
  cursor: pointer;
  transition: all 0.2s ease;
  white-space: nowrap;
}

.tab.active {
  color: #58CC02;
  border-bottom-color: #58CC02;
}

/* ============ 资源列表 ============ */
.materials-list {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.materials-grid {
  display: flex;
  flex-direction: column;
  gap: 1px;
  background-color: #E6E6E6;
}

/* ============ 资源卡片 ============ */
.material-card {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 16px 24px;
  background-color: #ffffff;
  cursor: pointer;
  transition: all 0.2s ease;
}

.material-card:active {
  background-color: #F9F9F9;
}

.material-icon {
  width: 56px;
  height: 56px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28px;
  flex-shrink: 0;
}

.material-icon.pdf {
  background-color: #FFE6E6;
}

.material-icon.audio {
  background-color: #E6F2FF;
}

.material-icon.video {
  background-color: #E6FFE6;
}

.material-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.material-name {
  font-size: 14px;
  font-weight: 600;
  color: #1F1F1F;
}

.material-meta {
  font-size: 12px;
  color: #A0A0A0;
}

.material-progress {
  display: flex;
  align-items: center;
  gap: 8px;
}

.progress-bar {
  flex: 1;
  height: 4px;
  background-color: #E6E6E6;
  border-radius: 2px;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #58CC02;
}

.progress-text {
  font-size: 11px;
  color: #A0A0A0;
  min-width: 28px;
  text-align: right;
}

.material-action {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  color: #A0A0A0;
  font-size: 16px;
}

/* ============ 空状态 ============ */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 16px;
  padding: 60px 24px;
  text-align: center;
}

.empty-icon {
  font-size: 48px;
}

.empty-text {
  font-size: 16px;
  color: #A0A0A0;
}

/* ============ 底部空白 ============ */
.materials-bottom {
  height: 40px;
}

/* ============ 响应式设计 ============ */
@media (max-width: 375px) {
  .top-bar {
    padding: 0 16px;
  }

  .material-card {
    padding: 12px 16px;
  }

  .material-icon {
    width: 48px;
    height: 48px;
    font-size: 24px;
  }

  .material-name {
    font-size: 13px;
  }
}
