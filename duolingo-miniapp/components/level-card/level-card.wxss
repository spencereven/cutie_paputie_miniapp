/* 关卡卡片组件样式 */

.level-card {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 6px 12px;
  height: 70px;
  background-color: #ffffff;
  border: 1px solid #E6E6E6;
  border-radius: 12px;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
}

.level-card:active {
  background-color: #F5F5F5;
  transform: scale(0.98);
}

.level-icon-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60px;
  height: 60px;
  border-radius: 12px;
  flex-shrink: 0;
  position: relative;
}

/* 图标类型变体 */
.level-icon-wrapper.blue {
  background-color: #F3F8FF;
}

.level-icon-wrapper.blue .level-icon {
  background: radial-gradient(circle, #2CB7FF 0%, #2CB7FF 100%);
}

.level-icon-wrapper.purple {
  background-color: #F1EDFF;
}

.level-icon-wrapper.purple .level-icon {
  background: radial-gradient(circle, #7A5CFF 0%, #5B3BFF 100%);
}

.level-icon-wrapper.orange {
  background-color: #FFF1E3;
}

.level-icon-wrapper.orange .level-icon {
  background: radial-gradient(circle, #FFB347 0%, #FF8C42 100%);
}

.level-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 52px;
  height: 52px;
  border-radius: 10px;
}

.icon-content {
  font-size: 28px;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.level-info {
  display: flex;
  flex-direction: column;
  gap: 4px;
  flex: 1;
  justify-content: center;
}

.level-title {
  font-size: 14px;
  font-weight: 600;
  color: #4A4A4A;
  line-height: 1;
}

.level-subtitle {
  font-size: 11px;
  font-weight: 600;
  color: #8A8A8A;
  line-height: 1;
}

.level-lock {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 30px;
  height: 30px;
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 50%;
  flex-shrink: 0;
}

.lock-icon {
  font-size: 16px;
}

/* 响应式 */
@media (max-width: 375px) {
  .level-card {
    gap: 10px;
    padding: 6px 10px;
    height: 64px;
  }

  .level-icon-wrapper {
    width: 54px;
    height: 54px;
  }

  .level-icon {
    width: 48px;
    height: 48px;
  }

  .icon-content {
    font-size: 24px;
  }

  .level-title {
    font-size: 13px;
  }

  .level-subtitle {
    font-size: 10px;
  }
}
