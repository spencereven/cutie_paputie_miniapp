/* 单元横幅组件样式 */

.banner-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 12px 16px;
  padding: 10px 12px;
  height: 72px;
  border-radius: 12px;
  gap: 12px;
}

.banner-container.theme-blue {
  background: linear-gradient(135deg, #2CB7FF 0%, #1FAEE8 100%);
}

.banner-container.theme-purple {
  background: linear-gradient(135deg, #7A5CFF 0%, #5B3BFF 100%);
}

.banner-container.theme-orange {
  background: linear-gradient(135deg, #FFB347 0%, #FF8C42 100%);
}

.banner-content {
  display: flex;
  flex-direction: column;
  gap: 4px;
  flex: 1;
  justify-content: center;
}

.banner-label {
  font-size: 11px;
  font-weight: 700;
  letter-spacing: 0.5px;
  line-height: 1;
}

.banner-container.theme-blue .banner-label {
  color: #BEEAFF;
}

.banner-container.theme-purple .banner-label {
  color: #E4DCFF;
}

.banner-container.theme-orange .banner-label {
  color: #FFE1C7;
}

.banner-title {
  font-size: 16px;
  font-weight: 700;
  color: #ffffff;
  line-height: 1.3;
  word-break: break-word;
}

.banner-action {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 46px;
  height: 46px;
  border-radius: 10px;
  flex-shrink: 0;
  cursor: pointer;
  transition: all 0.2s ease;
}

.banner-container.theme-blue .banner-action {
  background-color: #1FAEE8;
}

.banner-container.theme-purple .banner-action {
  background-color: #5B3BFF;
}

.banner-container.theme-orange .banner-action {
  background-color: #FF8C42;
}

.banner-action:active {
  opacity: 0.8;
  transform: scale(0.95);
}

.banner-icon {
  font-size: 20px;
  color: #ffffff;
  font-weight: 700;
}

/* 响应式 */
@media (max-width: 375px) {
  .banner-container {
    margin: 8px 12px;
    padding: 8px 10px;
    height: 66px;
    gap: 10px;
  }

  .banner-label {
    font-size: 10px;
  }

  .banner-title {
    font-size: 14px;
  }

  .banner-action {
    width: 40px;
    height: 40px;
  }
}
