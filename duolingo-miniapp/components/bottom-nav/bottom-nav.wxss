/* 底部导航组件样式 */

.bottom-nav-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80px;
  padding: 12px 32px;
  padding-bottom: 12px;
  background-color: #ffffff;
  border-top: 1px solid #E6E6E6;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  box-sizing: border-box;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 48px;
  height: 48px;
  border-radius: 14px;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
}

.nav-item:active {
  transform: scale(0.9);
}

/* 激活状态 */
.nav-item.active {
  background-color: #E5F6FF;
}

.nav-item.active .nav-icon-wrapper {
  background-color: #E5F6FF;
}

/* 图标容器（主要用于home，其他直接使用图标） */
.nav-icon-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  border-radius: 12px;
  transition: all 0.3s ease;
}

/* 导航图标 */
.nav-icon {
  font-size: 28px;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-item.active .nav-icon {
  filter: brightness(1.1);
}

/* 响应式 */
@media (max-width: 375px) {
  .bottom-nav-wrapper {
    height: 70px;
    padding: 8px 24px;
    padding-bottom: 8px;
  }

  .nav-item {
    width: 44px;
    height: 44px;
  }

  .nav-icon {
    font-size: 24px;
  }
}

/* 处理iPhone刘海屏和底部安全区 */
@supports (padding: max(0px)) {
  .bottom-nav-wrapper {
    padding-bottom: max(12px, env(safe-area-inset-bottom));
  }
}
