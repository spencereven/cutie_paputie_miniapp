PORT=3000
NODE_ENV=development

# JWT
JWT_SECRET=replace_with_a_strong_secret
ACCESS_TOKEN_EXPIRES_IN=2h
REFRESH_TOKEN_EXPIRES_IN=30d

# WeChat Mini Program
WECHAT_APP_ID=your_wechat_appid
WECHAT_APP_SECRET=your_wechat_app_secret

# For local development without real WeChat secret exchange
WECHAT_MOCK_MODE=true

# Upload controls
UPLOAD_MAX_MB=100
# Base64 JSON is larger than original file. Keep this > UPLOAD_MAX_MB.
BODY_LIMIT_MB=170

# PostgreSQL (for Prisma)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/duolingo_miniapp?schema=public"
