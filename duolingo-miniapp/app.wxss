/**
 * Duolingo Mini App - 全局样式
 */

:root {
  /* Duolingo 品牌颜色 */
  --color-blue: #2CB7FF;
  --color-light-blue: #1FAEE8;
  --color-sky-blue: #1FA5FF;
  --color-gold: #F5A623;
  --color-light-gray: #E6E6E6;
  --color-dark-gray: #B0B0B0;
  --color-light-bg-blue: #E5F6FF;
  --color-white: #FFFFFF;
  --color-black: #111111;

  /* 间距 */
  --spacing-xs: 4px;
  --spacing-sm: 8px;
  --spacing-md: 12px;
  --spacing-lg: 16px;
  --spacing-xl: 24px;
  --spacing-2xl: 32px;

  /* 圆角 */
  --radius-sm: 4px;
  --radius-md: 8px;
  --radius-lg: 12px;
  --radius-xl: 16px;

  /* 字体 */
  --font-size-xs: 10px;
  --font-size-sm: 12px;
  --font-size-base: 14px;
  --font-size-md: 16px;
  --font-size-lg: 18px;
  --font-size-xl: 20px;
}

/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", sans-serif;
  font-size: 14px;
  color: #111111;
  margin: 0;
  padding: 0;
}

/* 文本样式 */
.text-xs {
  font-size: 10px;
}

.text-sm {
  font-size: 12px;
}

.text-base {
  font-size: 14px;
}

.text-md {
  font-size: 16px;
}

.text-lg {
  font-size: 18px;
}

.text-xl {
  font-size: 20px;
}

/* 字重 */
.font-normal {
  font-weight: 400;
}

.font-semibold {
  font-weight: 600;
}

.font-bold {
  font-weight: 700;
}

/* 颜色 */
.text-black {
  color: #111111;
}

.text-gray {
  color: #666666;
}

.text-light-gray {
  color: #999999;
}

.bg-white {
  background-color: #ffffff;
}

.bg-light-gray {
  background-color: #f5f5f5;
}

.bg-blue {
  background-color: #2CB7FF;
}

/* 弹性布局 */
.flex {
  display: flex;
}

.flex-col {
  display: flex;
  flex-direction: column;
}

.justify-center {
  justify-content: center;
}

.justify-between {
  justify-content: space-between;
}

.items-center {
  align-items: center;
}

.gap-xs {
  gap: 4px;
}

.gap-sm {
  gap: 8px;
}

.gap-md {
  gap: 12px;
}

.gap-lg {
  gap: 16px;
}

/* 圆角 */
.rounded-sm {
  border-radius: 4px;
}

.rounded-md {
  border-radius: 8px;
}

.rounded-lg {
  border-radius: 12px;
}

.rounded-xl {
  border-radius: 16px;
}

.rounded-full {
  border-radius: 50%;
}

/* 阴影 */
.shadow-sm {
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
}

.shadow-md {
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
}

.shadow-lg {
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
}

/* 间距 */
.p-xs {
  padding: 4px;
}

.p-sm {
  padding: 8px;
}

.p-md {
  padding: 12px;
}

.p-lg {
  padding: 16px;
}

.px-md {
  padding-left: 12px;
  padding-right: 12px;
}

.py-md {
  padding-top: 12px;
  padding-bottom: 12px;
}

/* 宽度 */
.w-full {
  width: 100%;
}

.h-full {
  height: 100%;
}

/* 其他 */
.cursor-pointer {
  cursor: pointer;
}

.transition {
  transition: all 0.3s ease;
}
